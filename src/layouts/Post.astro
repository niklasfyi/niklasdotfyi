---
import { render } from "astro:content";
import { Image } from "astro:assets";
import { YouTube } from "astro-embed";
import myImage from "@/assets/logo.png";
import type { CollectionEntryType } from "@/types";
import {
  isArticleEntry,
  isCheckinEntry,
  isNoteEntry,
  isBookmarkEntry,
  isWatchedEntry,
  getEntryDate,
  getEntryTags,
  getEntryDescription,
  getEntryOgImage,
  getEntryUpdated,
  entryHasTitle,
} from "@/utils/entry";

import TOC from "@/components/blog/TOC.astro";
import WebMentions from "@/components/blog/webmentions/index.astro";

import BaseLayout from "./Base.astro";

import FormattedDate from "@/components/FormattedDate.astro";
import { siteConfig } from "@/site.config";

interface Props {
  post: CollectionEntryType;
}

const { post } = Astro.props;
const { data, collection, id } = post;

const isArticle = isArticleEntry(post);
const isCheckin = isCheckinEntry(post);
const isNote = isNoteEntry(post);
const isBookmark = isBookmarkEntry(post);
const isWatched = isWatchedEntry(post);

let title = "";
if (isNote) {
  title = post.body
    ? post.body.length > 20
      ? `${post.body.slice(0, 20)}...`
      : post.body
    : "";
} else if (isCheckin) {
  title = `At ${post.data.checkin.name ?? "Unknown Location"}`;
} else if (isArticle || isBookmark) {
  title = post.data.title;
} else if (isWatched) {
  title = post.data.summary;
}

const description = getEntryDescription(post);
const tags = getEntryTags(post);
const draft = isArticle ? post.data["post-status"] === "draft" : false;
const coverImage = isArticle ? post.data.coverImage : null;
const checkinPhoto = isCheckin ? post.data.photo : null;
const date = getEntryDate(post);
const updated = getEntryUpdated(post) ?? null;
const ogImage = getEntryOgImage(post);
const socialImage =
  ogImage ?? (entryHasTitle(post) ? `/og-image/${id}.png` : "/social-card.png");
const articleDate = updated?.toISOString() ?? date.toISOString();

const { headings, remarkPluginFrontmatter } = await render(post);
const readingTime: string = remarkPluginFrontmatter.readingTime;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<BaseLayout
  meta={{
    articleDate,
    description: description ?? "",
    ogImage: socialImage,
    title,
  }}
>
  <article class="h-entry content-box reveal post-card">
    <div id="blog-hero" class="post-hero">
      {
        (coverImage && (
          <div class="post-media">
            <Image
              alt={coverImage.alt}
              layout="constrained"
              width={748}
              height={420}
              priority
              src={coverImage.src}
            />
          </div>
        )) ||
          (checkinPhoto && (
            <div class="post-media">
              <Image
                alt="Photo from the checkin"
                layout="constrained"
                width={748}
                height={420}
                priority
                src={checkinPhoto}
              />
            </div>
          ))
      }
      {draft ? <span class="draft-tag">(Draft)</span> : null}
      {title && <h1 class="p-name title post-title">{title}</h1>}
      <div class="post-meta">
        <p>
          <FormattedDate class="dt-published" date={date} /> /{" "}
          {readingTime}
        </p>
        {
          updated && (
            <span class="post-updated">
              Updated:
              <FormattedDate class="post-updated-date" date={updated} />
            </span>
          )
        }
      </div>
    </div>
    <div class="post-body">
      {!!headings.length && <TOC headings={headings} />}
      <div class="e-content prose post-content">
        <!-- If bookmark, show link to original article and also if bookmark-of link is from youtube, render video -->
        {
          isBookmark && (
            <p>
              <a class="custom-link" href={post.data["bookmark-of"]}>
                {post.data.title}
              </a>
            </p>
          )
        }
        {
          isBookmark &&
          post.data["bookmark-of"]?.startsWith(
            "https://www.youtube.com/watch",
          ) ? (
            <YouTube id={post.data["bookmark-of"]} />
          ) : null
        }
        <slot />
        {
          !!tags?.length && (
            <div class="post-tags">
              <svg
                class="post-tags-icon"
                aria-hidden="true"
                fill="none"
                focusable="false"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d="M0 0h24v24H0z" fill="none" stroke="none" />
                <path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z" />
                <path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116" />
                <path d="M6 9h-.01" />
              </svg>
              {tags.map((tag: string, i: number) => (
                <>
                  {/* prettier-ignore */}
                  <span class="tag-item">
                  <a class="custom-link tag-link" data-pagefind-filter={`tag:${tag}`} href={`/tags/${tag}/`}><span class="sr-only">View more blogs with the tag&nbsp;</span><span class="p-category">{tag}</span>
                  </a>{i < tags.length - 1 && ", "}
                </span>
                </>
              ))}
            </div>
          )
        }
        <div class="is-hidden">
          <!-- This is for the h-card microformat -->
          <span class="p-author h-card">
            <a href="/" class="p-name u-url">{siteConfig.author}</a>
            <Image
              src={myImage}
              alt="Logo of myself"
              class="u-photo is-hidden"
            />
          </span>
          <a href={canonicalURL} rel="canonical" class="u-url u-uid"></a>
          <span class="p-summary">{description}</span>
        </div>
        <WebMentions />
      </div>
    </div>
  </article>
  <div class="content-box post-footer">
    <span
      >Posted in <a class="custom-link" href={`/${collection}`}>/{collection}</a
      >
      {
        data.client_id && (
          <>
            via{" "}
            <a class="custom-link" href={data.client_id}>
              {data.client_id.replace(/^https?:\/\//, "").replace(/\/$/, "")}
            </a>
          </>
        )
      }
    </span>
  </div>
  <button class="to-top" data-show="false" id="to-top-btn">
    <span class="sr-only">Back to top</span>
    <svg
      aria-hidden="true"
      class="icon-24"
      fill="none"
      focusable="false"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M4.5 15.75l7.5-7.5 7.5 7.5"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </button>
</BaseLayout>

<script>
  const scrollBtn = document.getElementById("to-top-btn") as HTMLButtonElement;
  const targetHeader = document.getElementById("blog-hero") as HTMLDivElement;

  function callback(entries: IntersectionObserverEntry[]) {
    entries.forEach((entry) => {
      // only show the scroll to top button when the heading is out of view
      scrollBtn.dataset.show = (!entry.isIntersecting).toString();
    });
  }

  scrollBtn.addEventListener("click", () => {
    document.documentElement.scrollTo({ behavior: "smooth", top: 0 });
  });

  const observer = new IntersectionObserver(callback);
  observer.observe(targetHeader);
</script>
