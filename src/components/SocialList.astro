---
import { Icon } from "astro-icon/components";

/**
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
	Only installed pack is: @iconify-json/ph
*/
const socialLinks: {
  friendlyName: string;
  isWebmention?: boolean;
  link: string;
  name: string;
}[] = [
  {
    friendlyName: "Github",
    link: "https://github.com/niklasfyi",
    name: "ph:github-logo",
    isWebmention: true,
  },
  {
    friendlyName: "Mastodon",
    link: "https://hachyderm.io/@niklasfyi",
    name: "ph:mastodon-logo",
    isWebmention: true,
  },
  {
    friendlyName: "Bluesky",
    link: "https://bsky.app/profile/niklas.fyi",
    name: "ph:butterfly",
    isWebmention: true,
  },
  {
    friendlyName: "LinkedIn",
    link: "https://www.linkedin.com/in/niklas-%F0%9F%92%BB-siefke-70448455/",
    name: "ph:linkedin-logo",
    isWebmention: true,
  },
  {
    friendlyName: "E-Mail",
    link: "mailto:hi@niklas.fyi",
    name: "ph:envelope",
    isWebmention: true,
  },
];
---

<div class="social-list">
  <ul class="social-links">
    {
      socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
        <li class="social-item">
          <a
            class="social-link"
            href={link}
            rel={`noreferrer ${isWebmention ? "me authn" : ""}`}
            target="_blank"
          >
            <Icon
              aria-hidden="true"
              class="icon-24"
              focusable="false"
              name={name}
            />
            <span class="sr-only">{friendlyName}</span>
          </a>
        </li>
      ))
    }
  </ul>
</div>
