{
	"name": "niklasdotfyi",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro build",
		"postbuild": "pagefind --site dist && webmention dist/rss.xml --limit 10 --send",
		"preview": "astro preview",
		"lint": "biome lint .",
		"format": "pnpm run format:code && pnpm run format:imports",
		"format:code": "biome format . --write && prettier -w \"**/*\" \"!**/*.{md,mdx}\" --ignore-unknown --cache",
		"format:imports": "biome check --formatter-enabled=false --write",
		"check": "astro check",
		"create": "tsx scripts/create-content.ts"
	},
	"dependencies": {
		"@astrojs/markdown-remark": "^6.3.10",
		"@astrojs/mdx": "4.3.13",
		"@astrojs/rss": "4.0.15",
		"@astrojs/sitemap": "3.7.0",
		"@benjifs/wm": "^1.6.1",
		"@iconify-json/ph": "^1.2.2",
		"astro": "5.17.2",
		"astro-embed": "^0.12.0",
		"astro-expressive-code": "^0.41.6",
		"astro-icon": "^1.1.5",
		"astro-robots-txt": "^1.0.0",
		"astro-webmanifest": "^1.0.0",
		"cssnano": "^7.1.2",
		"hastscript": "^9.0.1",
		"markdown-it": "^14.1.1",
		"mdast-util-directive": "^3.1.0",
		"mdast-util-to-markdown": "^2.1.2",
		"mdast-util-to-string": "^4.0.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-unwrap-images": "^1.0.0",
		"remark-directive": "^4.0.0",
		"sanitize-html": "^2.17.0",
		"satori": "0.19.2",
		"satori-html": "^0.3.2",
		"sharp": "^0.34.5",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.1.0"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.6",
		"@biomejs/biome": "^2.4.0",
		"@clack/prompts": "^1.0.1",
		"@pagefind/default-ui": "^1.4.0",
		"@resvg/resvg-js": "^2.6.2",
		"@types/hast": "^3.0.4",
		"@types/markdown-it": "^14.1.2",
		"@types/mdast": "^4.0.4",
		"@types/sanitize-html": "^2.16.0",
		"autoprefixer": "^10.4.27",
		"pagefind": "^1.4.0",
		"prettier": "^3.8.1",
		"prettier-plugin-astro": "0.14.1",
		"reading-time": "^1.5.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"pnpm": {
		"overrides": {
			"sharp": "^0.34.2"
		},
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"esbuild",
			"sharp"
		]
	}
}
